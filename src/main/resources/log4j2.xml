<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %m%n%r"/>
        </Console>
        <File name="File" fileName="log_file.log" append="false">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p - %msg%n</Pattern>
            </PatternLayout>
        </File>
</Appenders>
    <Loggers>
        <Root level="Info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File" level="WARN"/>
        </Root>
        <Logger name="framework.Log" level="all" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>